{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "csharp_build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/twitter.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "multi_build",
            "dependsOn": [
                "csharp_build",
                "java_build",
                "python_build"
            ],
            "problemMatcher": []
        },
        {
            "label": "node_build",
            "dependsOn": [
                "csharp_build",
                "javascript_provider_build",
                "javascript_processor_build"
            ],
            "problemMatcher": []
        },
        {
            "label": "python_build",
            "command": "pip3",
            "options": {
                "cwd": "${workspaceFolder}/src/python_provider"
            },
            "type": "process",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "problemMatcher": []
        },
        {
            "label": "javascript_processor_build",
            "command": "npm",
            "options": {
                "cwd": "${workspaceFolder}/src/javascript_processor"
            },
            "type": "process",
            "args": [
                "install"
            ],
            "problemMatcher": []
        },
        {
            "label": "javascript_provider_build",
            "command": "npm",
            "options": {
                "cwd": "${workspaceFolder}/src/javascript_provider"
            },
            "type": "process",
            "args": [
                "install"
            ],
            "problemMatcher": []
        },
        {
            "label": "java_build",
            "command": "mvn",
            "options": {
                "cwd": "${workspaceFolder}/src/java_viewer"
            },
            "type": "process",
            "args": [
                "clean",
                "install"
            ],
            "problemMatcher": []
        },
        {
            "label": "run_csharp_provider",
            "appId": "provider",
            "appPort": 5040,
            "httpPort": 3500,
            "grpcPort": 50001,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "stop_provider",
            "appId": "provider",
            "type": "daprd-down"
        },
        {
            "label": "run_python_provider",
            "appId": "provider",
            "appPort": 5040,
            "httpPort": 3500,
            "grpcPort": 50001,
            "appProtocol": "grpc",
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "run_csharp_processor",
            "appId": "processor",
            "appPort": 5030,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "stop_processor",
            "appId": "processor",
            "type": "daprd-down"
        },
        {
            "label": "run_csharp_viewer",
            "appId": "viewer",
            "appPort": 5000,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "stop_viewer",
            "appId": "viewer",
            "type": "daprd-down"
        },
        {
            "label": "run_java_viewer",
            "appId": "viewer",
            "appPort": 8088,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "run_javascript_processor",
            "appId": "processor",
            "appPort": 5030,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "run_javascript_provider",
            "appId": "provider",
            "appPort": 5040,
            "httpPort": 3500,
            "grpcPort": 50001,
            "type": "dapr",
            "componentsPath": "./components/local"
        }
    ]
}