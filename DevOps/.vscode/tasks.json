{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "csharp_build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/twitter.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "java_build",
            "command": "mvn",
            "options": {
                "cwd": "${workspaceFolder}/src/java_viewer"
            },
            "type": "process",
            "args": [
                "clean",
                "install"
            ],
            "problemMatcher": []
        },
        {
            "label": "run_csharp_provider",
            "appId": "provider",
            "appPort": 5040,
            "httpPort": 3500,
            "grpcPort": 50001,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "stop_csharp_provider",
            "appId": "provider",
            "type": "daprd-down"
        },
        {
            "label": "run_csharp_processor",
            "appId": "processor",
            "appPort": 5030,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "stop_csharp_processor",
            "appId": "processor",
            "type": "daprd-down"
        },
        {
            "label": "run_csharp_viewer",
            "appId": "viewer",
            "appPort": 5000,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "stop_csharp_viewer",
            "appId": "viewer",
            "type": "daprd-down"
        },
        {
            "label": "run_java_viewer",
            "appId": "viewer",
            "appPort": 8088,
            "type": "dapr",
            "componentsPath": "./components/local"
        },
        {
            "label": "stop_java_viewer",
            "appId": "viewer",
            "type": "daprd-down"
        }
    ]
}